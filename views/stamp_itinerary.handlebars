<main role="main">
    <div class="container">
        <a href="/home"><h1>Stamp Rally</h1></a>
        <h3>Stamps in your Itinerary</h3>
        <table class="table table-striped">
            <thead>
                <th>Name</th>
                <th>Type</th>
                <th>Description</th>
                <th>Duration (hours)</th>
                <th>Remove From Itinerary</th>
            </thead>
            <tbody>
            {{#each stamps}}
                <tr>
                    <td><a href="/stamp_edit/{{id}}">{{name}}</a></td>
                    <td>{{type}}</td>
                    <td>{{description}}</td>
                    <td>{{duration}}</td>
                    <td class="text-center">
                        <a onclick="remove_from_itinerary({{id}})"><i class="fas fa-trash-alt" style="color: red; cursor: pointer;"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

</main>
<script src="/static/stamp.js"></script>